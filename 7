using System;

namespace ConsoleApp7
{
    class Program
    {
        static void Main(string[] args)
        {
            //7.Un programa que te pida tu nombre y lo muestre en pantalla separando cada letra de la siguiente con un espacio. 
            //    Por ejemplo, si tu nombre es "Moreta", deberiÃÅa aparecer en pantalla "M o r e t a".


string nombre;

            Console.Write("DIGITE NOMBRE:\n" +
            "");
            nombre = Console.ReadLine();
            char[] letra_por_letra = nombre.ToCharArray();
            foreach (char n in letra_por_letra)
            {
                Console.WriteLine(n);
            }
            Console.ReadKey();




        }
    }


        }


